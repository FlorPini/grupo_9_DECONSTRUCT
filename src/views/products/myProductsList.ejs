<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <link rel="stylesheet" href="/css/styles_productsList.css" />
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div class="shopping-cart-title">
        <label for="chk" aria-hidden="true"><%=products.tittle%></label>
      </div>
      <div class="shopping-cart-title">
        <div class="courses-cart">
          <% for (let i=0 ; i < products.length; i++) {%> 
            <li class="prod-name" >
              <div class="courses-cart-item">
                <div>
                  <a  href="/products/<%=products[i].id%>">
                  <img
                  class="courses-images-cart"
                  src="/images/productImages/<%=products[i].image %>"
                  alt="Img Plomeria Banner"
                  > 
                  </a>
                </div>
                <div class="courses-cart-descrip">
                  <h2 class="courses-cart-name"><%=products[i].product_name %></h2>
        
                  <div class="price-cart">
                    <p>Valor $ <%=products[i].price %></p>
                  </div>
                  <div class="price-cart">
                  <% for (let j = 0 ; j < categorys.length; j++) { %>
                    <%= (categorys[j].id == products[i].category_id  &&  categorys[j].category == "Curso")  ? "DuraciÃ³n curso " + products[i].duration + " hs": null %>
                    <%= (categorys[j].id == products[i].category_id  &&  categorys[j].category != "Curso")  ?  categorys[j].category : null %>
                  <% } %>
                  <a  class="shopping-cart shopping-Cart-Button" value="3">
                    <i class="fas fa-shopping-cart"> 4</i> 
                  </a>
                  </div>
                </div>
              </div>
            </li>
          <% } %> 
        </div>
      </div>
    </main>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
